<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frg_paralelo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividad.FrgparaleloA">

    <LinearLayout
        android:id="@+id/linear_paralelo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeee"
        android:orientation="vertical"
        android:elevation="3dp"
        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18dp"
            android:text="@string/sag_subtitulo_clase"
            />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#eeee" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_paralelos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_to_list_estudiantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right|end"
                android:layout_margin="16dp"
                android:contentDescription="Siguiente"
                app:backgroundTint="@color/secondaryDarkColor"
                app:srcCompat="@drawable/sag_arrow_right_24"/>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>

</FrameLayout>