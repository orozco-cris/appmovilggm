<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient android:angle="270"
                android:centerColor="#44000000"
                android:centerX="0.6"
                android:endColor="#44000000"
                android:startColor="#44000000" />
            <stroke android:width="1dp" android:color="#44000000" />
            <corners android:radius="16dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>
            <padding android:bottom="0dp" android:left="2dp"
                android:right="2dp" android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>
            <solid android:color="#ffffff" />
        </shape>
    </item>



</layer-list>